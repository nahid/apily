# .editorconfig

# Top-most EditorConfig file
root = true

# Define rules for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Custom JSON file type (e.g., .cjson)
[*.api]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true